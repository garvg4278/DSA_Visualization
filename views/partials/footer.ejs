<script>
    // Array of different messages
    const chatbotMessages = [
        "How can I assist you with algorithms today?",
        "Need help with sorting, searching, or graph algorithms?",
        "What algorithm are you interested in exploring?",
        "Have questions about data structures?",
        "Looking for algorithm visualizations?"
    ];

    // Array of different animations
    const animations = [
        'popupAnimation1',
        'popupAnimation2',
        'popupAnimation3',
        'popupAnimation4',
        'popupAnimation5'
    ];

    // Function to change the chatbot text and apply a sequential animation at intervals
    function changeChatbotText() {
        const chatbotTextElement = document.getElementById('chatbot-text');
        const chatbotPopupElement = document.getElementById('chatbot-popup');
        let messageIndex = 0;
        let animationIndex = 0;

        setInterval(function () {
            chatbotTextElement.innerHTML = chatbotMessages[messageIndex];

            // Remove any previous animation classes
            chatbotPopupElement.classList.remove(...animations);

            // Apply the current animation
            chatbotPopupElement.classList.add(animations[animationIndex]);

            messageIndex = (messageIndex + 1) % chatbotMessages.length;
            animationIndex = (animationIndex + 1) % animations.length;
        }, 5000); // Change text every 5 seconds
    }

    // Show the chatbot popup and change text when the page loads
    window.onload = function () {
        changeChatbotText();
    }

</script>
